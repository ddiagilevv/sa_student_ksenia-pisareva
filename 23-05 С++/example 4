a = float (input ("Введите число a: "))
b = float (input ("Введите число b: "))

print ("Сложение: a + b = ", a + b);
print (" Вычитание: a - b = ", a - b);
print ("Умножение: a * b = ", a * b);
print ("Деление: a / b = ", a / b);
if b=0:
print ("Деление: a / b = ", a / b)
else:
print ("Деление на ноль невозможно!")